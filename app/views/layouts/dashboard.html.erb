  					    <p class="alert"><% alert %></p-->
  					    	<%= yield %>
  					    </div>
  							

  						   
  					</div>
  				</div>

  				<footer class="footer">
  					<div class="container-fluid">
  						<nav class="pull-left">
  							<ul>
  								<li>
  									<a href="#">
  										Home
  									</a>
  								</li>
  								
  							</ul>
  						</nav>
