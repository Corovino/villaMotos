<div class="row">
	 <div class="col-md-12">
	 <%= link_to 'Marca Inicio', brands_index_path, class:'btn btn-success' %>	 
	 <h2>Editar Marca</h2>
      <%= form_for @brand do |f| %>

      	 	 <% if @brand.errors.any? %>
      	 	    <%  @brand.errors.full_messages.each do |msg| %>
      	 	    	<div class="alert alert-danger"><%= msg %></div>
      	 	    <% end %>
      	 	 <% end %>   

      	   	<div class="form-group">
      	 		<%= f.label :nombre  %> <br>
      	 		<%= f.text_field :nombre, class: 'form-control'  %> <br>
      	 	</div>

      	 	<div class="form-group">
      	 		<%= f.label :codigo  %> <br>
      	 		<%= f.text_field :codigo, class: 'form-control'  %> <br>
      	 	</div>

      	 <%= f.submit "Enviar", class:"btn btn-success"  %>
      <% end %>
	

	 </div>	 
</div>